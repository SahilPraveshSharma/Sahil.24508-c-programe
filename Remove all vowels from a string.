#include <stdio.h>
#include <ctype.h>  

int main() {
    char str[1000];
    int j = 0; 

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    for (int i = 0; str[i] != '\0'; i++) {
        char ch = tolower(str[i]);
        if (!(ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u')) {
            str[j++] = str[i]; 
        }
    }
    str[j] = '\0'; 

    printf("String after removing vowels:\n%s\n", str);

    return 0;
}
