#include <stdio.h>

int main() {
    char operator;
    float num1, num2;
    int intNum1, intNum2; // For modulus operation

    printf("Enter first number: ");
    scanf("%f", &num1);

    printf("Enter second number: ");
    scanf("%f", &num2);

    printf("Enter an operator (+, -, *, /, %): ");
    scanf(" %c", &operator); // Note the space before %c

    switch(operator) {
        case '+':
            printf("Result: %.2f", num1 + num2);
            break;
        case '-':
            printf("Result: %.2f", num1 - num2);
            break;
        case '*':
            printf("Result: %.2f", num1 * num2);
            break;
        case '/':
            if(num2 != 0)
                printf("Result: %.2f", num1 / num2);
            else
                printf("Error: Division by zero!");
            break;
        case '%':
    
            intNum1 = (int)num1;
            intNum2 = (int)num2;
            if(intNum2 != 0)
                printf("Result: %d", intNum1 % intNum2);
            else
                printf("Error: Division by zero!");
            break;
        default:
            printf("Invalid operator!");
    }

    return 0;
}
