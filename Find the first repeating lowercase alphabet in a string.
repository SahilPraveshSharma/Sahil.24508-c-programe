#include <stdio.h>

int main() {
    char str[1000];
    int freq[26] = {0};  

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    char repeating = '\0';

    for (int i = 0; str[i] != '\0'; i++) {
        char ch = str[i];
        if (ch >= 'a' && ch <= 'z') { 
            freq[ch - 'a']++;
            if (freq[ch - 'a'] == 2) { 
                repeating = ch;
                break;
            }
        }
    }

    if (repeating != '\0') {
        printf("The first repeating lowercase alphabet is '%c'\n", repeating);
    } else {
        printf("No repeating lowercase alphabet found.\n");
    }

    return 0;
}
