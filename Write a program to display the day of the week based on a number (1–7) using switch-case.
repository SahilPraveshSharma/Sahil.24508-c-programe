#include <stdio.h>

int main() {
    int day;

    printf("Enter a number (1-7) to find the day of the week: ");
    scanf("%d", &day);

    switch(day) {
        case 1:
            printf("Day 1: Sunday");
            break;
        case 2:
            printf("Day 2: Monday");
            break;
        case 3:
            printf("Day 3: Tuesday");
            break;
        case 4:
            printf("Day 4: Wednesday");
            break;
        case 5:
            printf("Day 5: Thursday");
            break;
        case 6:
            printf("Day 6: Friday");
            break;
        case 7:
            printf("Day 7: Saturday");
            break;
        default:
            printf("Invalid input! Please enter a number between 1 and 7.");
    }

    return 0;
}


