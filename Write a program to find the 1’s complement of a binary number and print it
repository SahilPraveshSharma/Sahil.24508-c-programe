#include <stdio.h>
#include <string.h>

int main() {
    char binary[65]; 

    printf("Enter a binary number: ");
    scanf("%s", binary);

    int length = strlen(binary);
    int valid = 1;

    for (int i = 0; i < length; i++) {
        if (binary[i] != '0' && binary[i] != '1') {
            valid = 0;
            break;
        }
    }

    if (!valid) {
        printf("Invalid binary number!");
        return 0;
    }

    printf("1's complement: ");
    for (int i = 0; i < length; i++) {
        if (binary[i] == '0')
            printf("1");
        else
            printf("0");
    }

    return 0;
}
