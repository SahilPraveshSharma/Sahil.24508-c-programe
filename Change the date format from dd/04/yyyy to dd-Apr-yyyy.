#include <stdio.h>
#include <string.h>

int main() {
    char date[20], newDate[20];
    char day[3], month[3], year[5];

    printf("Enter date in dd/04/yyyy format: ");
    scanf("%s", date);

    sscanf(date, "%2s/%2s/%4s", day, month, year);

    if (strcmp(month, "04") == 0) {
        strcpy(month, "Apr");
    }

    snprintf(newDate, sizeof(newDate), "%s-%s-%s", day, month, year);

    printf("Date in new format: %s\n", newDate);

    return 0;
}
