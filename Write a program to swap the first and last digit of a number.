#include <stdio.h>
#include <math.h>

int main() {
    int num, original, lastDigit, firstDigit, digits, swappedNum;

    printf("Enter an integer: ");
    scanf("%d", &num);

    original = num;

    if (num < 0)
        num = -num; // Make number positive

    lastDigit = num % 10;

    digits = (int)log10(num);

    firstDigit = num / (int)pow(10, digits);

    swappedNum = lastDigit * (int)pow(10, digits) + 
                 (num % (int)pow(10, digits) - lastDigit) + firstDigit;

    if (original < 0)
        swappedNum = -swappedNum; // Restore negative sign

    printf("Number after swapping first and last digit: %d", swappedNum);

    return 0;
}

