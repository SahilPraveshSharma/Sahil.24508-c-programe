#include <stdio.h>

int main() {
    int num;
    int binary[32]; // Array to store binary digits
    int i = 0;

    printf("Enter a non-negative integer: ");
    scanf("%d", &num);

    if (num == 0) {
        printf("Binary: 0");
    } else {
      
        while (num > 0) {
            binary[i] = num % 2; // Store remainder
            num = num / 2;       // Divide number by 2
            i++;
        }

        printf("Binary: ");
        for (int j = i - 1; j >= 0; j--) {
            printf("%d", binary[j]);
        }
    }

    return 0;
}
